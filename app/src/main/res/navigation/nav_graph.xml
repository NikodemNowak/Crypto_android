<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/cryptoFragment"
        android:name="com.nikodem.crypto.ui.main.CryptoFragment"
        android:label="CryptoFragment" >
        <action
            android:id="@+id/action_cryptoFragment_to_cryptoDetailFragment"
            app:destination="@id/cryptoDetailFragment"
            app:popUpTo="@id/cryptoFragment" />
        <action
            android:id="@+id/action_cryptoFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:popUpTo="@id/cryptoFragment" />
    </fragment>
    <fragment
        android:id="@+id/cryptoDetailFragment"
        android:name="com.nikodem.crypto.ui.detail.CryptoDetailFragment"
        android:label="CryptoDetailFragment" >
        <argument
            android:name="coin"
            app:argType="com.nikodem.crypto.services.Coin" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.nikodem.crypto.ui.settings.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.nikodem.crypto.ui.welcome.WelcomeFragment"
        android:label="WelcomeFragment" >
        <action
            android:id="@+id/action_welcomeFragment_to_cryptoFragment"
            app:destination="@id/cryptoFragment" />
    </fragment>
</navigation>